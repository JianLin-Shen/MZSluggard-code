<idea-plugin>
    <id>com.manzo.android.plugin.layout</id>
    <name>ManzoAndroidPlugin</name>
    <version>1.0.2</version>
    <vendor email="1104724999@qq.com" url="https://blog.csdn.net/shenjinalin123">Manzo Shen</vendor>

    <description><![CDATA[
      提供各类代码自动生成代码<br>
        1、Activity中，选择R.layout.xxx。根据layout自动生成对象和设置点击事件<br>
        2、Adapter中，选择R.layout.xxx。根据layout，在ViewHolder中自动生成注入式代码对象<br>
	    @InjectView(R.id.test)<br>
	    private TextView mTest;<br>
    ]]></description>

    <change-notes><![CDATA[
      1、读取layout控件，添加java对象到相关类中.<br>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="SimpleGenerateCodeByLayout" class="com.manzo.plugin.actions.SimpleGenerateCodeAction"
                text="MSimpleGenerateByLayout">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl meta M"/>
        </action>
        <action id="GenerateCodeInAdapter" class="com.manzo.plugin.actions.GenerateCodeInAdapterAction"
                text="MGenerateAdapterByLayout">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl meta B"/>
        </action>
    </actions>

</idea-plugin>